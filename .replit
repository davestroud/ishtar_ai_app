run = "uvicorn app.main:app --host 0.0.0.0 --port 8080"
modules = ["web", "nodejs-20", "nix", "python-3.11"]
entrypoint = "app/main.py"

[deploy]
run = ["sh", "-c", "uvicorn app.main:app --host 0.0.0.0 --port 8080"]

[env]
PYTHONPATH = "${PYTHONPATH}:."

[languages]
python = { pattern = "**/*.py" }

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ishtar AI Website"

[[workflows.workflow]]
name = "Ishtar AI Website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "poetry run uvicorn app.main:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "5000"]

